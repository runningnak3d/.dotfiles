[colors]
background = #2c3e50
foreground = #eeeeee
blue       = #3fa9f4
green      = #22b574
black      = #000000

[bar/top]
; Size
width  = 100%
height = 20

; Offset
;offset-x = 50%
;offset-y = 50%

; Position
bottom = false

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 2
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.green}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
font-0 = Fira Code:style=Bold:size=10;3
font-1 = Font Awesome 5 Free Solid:size=12;3

; Modlues
modules-left   = emwh
modules-center = date time updates
modules-right  = battery xbacklight pavolume temperature

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize

[bar/bottom]
; Size
width  = 100%
height = 20

; Offset
;offset-x = 50%
;offset-y = 50%

; Position
bottom = true

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 2
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.black}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
font-0 = Fira Code:style=Bold:size=10;3
font-1 = Font Awesome 5 Free Solid:size=12;3

; Modlues
modules-left   = thunar termite firefox vscode gimp
modules-center = wireless-network networkspeedup networkspeeddown
modules-right  = uptime lock logout reboot poweroff

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize

[module/emwh]
type = internal/xworkspaces

; Mouse click
enable-click = true

; Mouse scroll
enable-scroll = false

; Sort
index-sort = true

; Display icons
fuzzy-match = true

; Icons
ws-icon-0       = Main;
ws-icon-1       = Terminal;
ws-icon-2       = Web;
ws-icon-3       = Program;
ws-icon-4       = Other;
ws-icon-default = 

; Focused label
label-focused            = %icon%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.blue}
label-focused-padding    = 2

; Unfocused labels
label-unfocused            = %icon%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding    = 2

; Visible labels
label-visible            = %icon%
label-visible-foreground = ${colors.foreground}
label-visible-padding    = 2

; Urgent labels
label-urgent            = %icon%
label-urgent-foreground = ${colors.green}
label-urgent-padding    = 2

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/arch-updates.sh
interval = 1000
label = Updates: %output%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = " "
format-prefix-foreground = $(colors.foreground)
label-urgent-padding    = 2

[module/xbacklight]
type = internal/xbacklight
format = <label> <bar>
bar-width = 10
;bar-indicator = |
bar-indicator =
bar-indicator-foreground = ${colors.blue}
bar-empty =
bar-fill =
format-prefix = " "
label-foreground = ${colors.green}
format-padding = 2

[module/battery]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100

format-charging = <animation-charging> <label-charging>
label-charging =  %percentage%%
lable-charging-foreground = ${colors.green}
format-charging-foreground = ${colors.green}
format-charging-background = ${colors.background}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging =  %percentage%%
lable-discharging-foreground = ${colors.green}
format-discharging-foreground = ${colors.green}
format-discharging-background = ${colors.background}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.green}
format-foreground = ${colors.foreground}
format-background = ${colors.background}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.green}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.green}
animation-charging-framerate = 750

[module/uptime]
;https://github.com/jaagr/polybar/wiki/User-contributed-modules#uptime
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
interval = 100
label =: %output%

format-foreground = ${colors.green}
format-background = ${colors.background}
format-prefix = ""
format-prefix-foreground = ${colors.green}
label-padding    = 2

[module/wireless-network]
type = internal/network
interface = wlo1
interval = 3.0
udspeed-minwidth = 0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = " %essid% "
label-connected-foreground = #eefafafa
label-disconnected = 
label-disconnected-foreground = #66ffffff
label-urgent-padding    = 2

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down
format-foreground = ${colors.green}
label-padding    = 2
format-background = ${colors.background}

[module/temperature]
type = internal/temperature

; Label
label            =  %temperature%
label-background = ${colors.background}
label-foreground = ${colors.green}
label-padding    = 2

; Warning label
label-warn            =  %temperature%
label-warn-background = ${colors.background}
label-warn-foreground = ${colors.green}
label-warn-padding    = 2

[module/pulseaudio]
type = internal/pulseaudio

; Volume label
label-volume            =  %percentage%%
label-volume-background = ${colors.green}
label-volume-foreground = ${colors.foreground}
label-volume-padding    = 2

; Muted label
label-muted            =  Muted
label-muted-background = ${colors.green}
label-muted-foreground = ${colors.foreground}
label-muted-padding    = 2

[module/networkspeedup]
;https://github.com/jaagr/polybar/wiki/Module:-network
type = internal/network
;interface = wlp3s0
;interface = enp14s0
;interface = enp0s31f6
interface = wlo1
label-connected = "%upspeed:7%"
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}

[module/networkspeeddown]
;https://github.com/jaagr/polybar/wiki/Module:-network
type = internal/network
;interface = wlp3s0
;interface = enp14s0
;interface = enp0s31f6
interface = wlo1
label-connected = "%downspeed:7%"
format-connected = <label-connected>
format-connected-prefix = "  "
format-connected-prefix-foreground = ${colors.foreground}
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}

[module/wlan]
type = internal/network
interface = wlo1
interval = 3.0

format-connected = <ramp-signal><label-connected>
; format-connected-prefix = " "
; format-connected = <label-connected>
format-connected-underline = ${xrdb:color11:#9f78e1}

# The text
label-connected = %essid% ↑%upspeed% ↓%downspeed%
label-font = 1
label-connected-background = ${colors.background}
label-connected-padding = 0

ramp-signal-font = 2
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-5 = 
ramp-signal-padding = 1
ramp-signal-foreground = ${colors.foreground-alt}
; ramp-signal-background = ${colors.background-alt}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


[module/date]
;https://github.com/jaagr/polybar/wiki/Module:-date
type = internal/date
; Seconds to sleep between updates
interval = 5
; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = " %a %b %d, %Y"
date-alt = " %a %b %d, %Y"
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-foreground = ${colors.foreground}
format-background = ${colors.background}
label = "%date% %time% "


[module/time]
type = internal/date

; Update interval
interval = 1.0

; Format
time = %I:%M %p

; Label
label            =  %time%
label-foreground = ${colors.foreground}
label-padding    = 1

[module/lock]
type = custom/text

; Label
content = 
content-background = ${colors.background}
content-foreground = ${colors.green}
content-padding    = 2

; Mouse click
click-left = slock

[module/logout]
type = custom/text

; Label
content            = 
content-background = ${colors.background}
content-foreground = ${colors.green}
content-padding    = 2

; Mouse click
click-left = polybar-msg exit

[module/reboot]
type = custom/text

; Label
content            = 
content-background = ${colors.background}
content-foreground = ${colors.green}
content-padding    = 2

; Mouse click
click-left = reboot

[module/poweroff]
type = custom/text

; Label
content            = 
content-background = ${colors.background}
content-foreground = ${colors.green}
content-padding    = 2

; Mouse click
click-left = poweroff

[module/firefox]
type = custom/text

; Label
content            = 
content-background = ${colors.background}
content-foreground = ${colors.blue}
content-padding    = 2

; Mouse click
click-left = firefox &

[module/vscode]
type = custom/text

; Label
content            = 
content-background = ${colors.background}
content-foreground = ${colors.Blue}
content-padding    = 2

; Mouse click
click-left = code &

[module/gimp]
type = custom/text

; Label
content            = 
content-background = ${colors.background}
content-foreground = ${colors.blue}
content-padding    = 2

; Mouse click
click-left = gimp &

[module/termite]
type = custom/text

; Label
content            = 
content-background = ${colors.background}
content-foreground = ${colors.blue}
content-padding    = 2

; Mouse click
click-left = termite &

[module/thunar]
type = custom/text

; Label
content            = 
content-background = ${colors.background}
content-foreground = ${colors.blue}
content-padding    = 2

; Mouse click
click-left = Thunar&

[settings]
screenchange-reload     = true
;compositing-background = xor
;compositing-foreground = source
;compositing-border     = over
;pseudo-transparency    = false

[global/wm]
margin-top    = 10
margin-bottom = 10
