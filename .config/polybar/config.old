[colors]
background = #002c3e50
foreground = #eeeeee
blue       = #3fa9f4
green      = #22b574
black      = #000000

[bar/top]
enable-ipc = true
; Size
width  = 1900
height = 20

; Offset
offset-x = 10
offset-y = 10

; Position
bottom = false

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = false

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 2
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.green}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
;font-0 = Fira Code:style=Bold:size=10;3
font-0 = Source Code Pro:style=Bold:size=10;3
;font-1 = Siji:style=Regular:size=10;3
font-1 = Font Awesome 5 Free Solid:style=Regular:size=12;3
font-2 = Siji:style=Bold:size=10;3

; Modlues
;modules-left   = emwh status uptime caffeine lock optimus-manager
modules-left   = i3 status uptime lock optimus-manager
modules-center = date time updates
modules-right  = wireless-network networkspeedup networkspeeddown  battery backlight pavolume temperature

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize

; systray
;tray-position = right
;tray-padding = 10
;tray-background = ${colors.background}
;tray-offset-x =
;tray-detached = false

[bar/top2]
enable-ipc = true
; Size
width  = 100%
height = 15

; Offset
;offset-x = 50%
offset-y = 15

; Position
bottom = false

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 2
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.black}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
font-0 = Source Code Pro:style=Bold:size=10;3
font-1 = Font Awesome 5 Free Solid:size=12;3

; Modlues
;modules-left   = thunar termite firefox vscode gimp
;modules-center = wireless-network networkspeedup networkspeeddown
modules-right  = uptime lock logout reboot poweroff

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize

tray-position = right
tray-padding = 10
tray-background = ${colors.background}
tray-offset-x =

[module/i3]
type = internal/i3

; Mouse click
enable-click = true

; Mouse scroll
enable-scroll = false

; Sort
index-sort = true

; Display icons
fuzzy-match = true

; Icons
ws-icon-0       = Chrome;ÔÄï
ws-icon-1       = Tilix;ÔÑ†
ws-icon-2       = Web;ÔÇ¨
ws-icon-3       = Program;ÔÑ°
ws-icon-4       = Other;Ôáº
ws-icon-default = Ôî°

; icon-[0-9]+ = <desktop-name>;<icon>
; NOTE: The desktop name needs to match the name configured by the WM
; You can get a list of the defined desktops using:
; $ xprop -root _NET_DESKTOP_NAMES
;icon-0 = code;‚ôö
;icon-1 = office;‚ôõ
;icon-2 = graphics;‚ôú
;icon-3 = mail;‚ôù
;icon-4 = web;‚ôû
;icon-default = ‚ôü

; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(active|urgent|occupied|empty)>
; Default: <label-state>
format = <label-state>

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-active = %icon% %name%
label-active-foreground = #ffffff
label-active-background = #3f3f3f
label-active-underline = #fba922

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-occupied = %icon%
label-occupied-underline = #555555

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-underline = #9b0a20

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = %icon%
label-empty-foreground = #55

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/arch-updates.sh
interval = 1000
label = Updates: %output%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "Ôõ¢ "
format-prefix-foreground = $(colors.foreground)
label-urgent-padding    = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
ramp-0 = ${env:BRIGHT0}
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = ${env:BRIGHT4}
bar-width = 10
bar-indicator = |
bar-indicator-foreground = ${colors.blue}
bar-empty = -
bar-fill = -
;format-prefix = "ÔÇ£ "
label-foreground = ${colors.green}
format-padding = 2

[module/battery]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100

format-charging = <animation-charging> <label-charging>
label-charging = ÔÅî %percentage%%
lable-charging-foreground = ${colors.green}
format-charging-foreground = ${colors.green}
format-charging-background = ${colors.background}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = ÔÅì %percentage%%
lable-discharging-foreground = ${colors.green}
format-discharging-foreground = ${colors.green}
format-discharging-background = ${colors.background}

format-full-prefix = "ÔâÄ "
format-full-prefix-foreground = ${colors.green}
format-foreground = ${colors.foreground}
format-background = ${colors.background}

ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ
ramp-capacity-foreground = ${colors.green}

animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-foreground = ${colors.green}
animation-charging-framerate = 750

[module/uptime]
;https://github.com/jaagr/polybar/wiki/User-contributed-modules#uptime
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
interval = 100
label =: %output%

format-foreground = ${colors.green}
format-background = ${colors.background}
format-prefix = "ÔÑà"
format-prefix-foreground = ${colors.green}
label-padding    = 2

[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3.0
udspeed-minwidth = 0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = "Ôá´ %essid% "
label-connected-foreground = #eefafafa
label-disconnected = Ôä¢
label-disconnected-foreground = #66ffffff
label-urgent-padding    = 2

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down
format-foreground = ${colors.green}
label-padding    = 2
format-background = ${colors.background}

[module/temperature]
type = internal/temperature

; Label
label            = Ôãã %temperature-f%
label-background = ${colors.background}
label-foreground = ${colors.green}
label-padding    = 2

; Warning label
label-warn            = Ôãá %temperature-f%
